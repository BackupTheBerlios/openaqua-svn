<?xml version="1.0" ?>
<project name="takanuka" basedir=".." default="prepare">
	<description>Takanuka lib</description>
	<property file="ant/build.properties" />
	<property file="ant/classpath.properties" />
	
	
	<fileset id="source" dir="${src.java}">
		<include name="**/*.java"/>
	</fileset>
	
	
	<fileset id="junit" dir="${src.junit}">
		<include name="**/*Test.java"/>
	</fileset>
	
	
	<path id="ExternalLibs">
		<pathelement location="${path2log4j}"/>
	</path>
	<!-- ================================= 
          target: prepare              
         ================================= -->
    <target name="prepare" description="setup environment">
        <mkdir dir="${target}"/>
        <mkdir dir="${target.java}"/>
        <mkdir dir="${target.javadoc}"/>
        <mkdir dir="${target.junit}"/>
    </target>

	
	
	
	<!-- ================================= 
          target: compile              
         ================================= -->
    <target name="compile" depends="prepare" description="--> compile the java code">
        <javac srcdir="${src.java}" destdir="${target.java}">
        	<classpath>
        		<pathelement location="${src.java}"/>
        		<path refid="ExternalLibs" />
        	</classpath>
        </javac>
    </target>

	
	
	
	
	<!-- ================================= 
          target: javadoc              
         ================================= -->
    <target name="javadoc" depends="prepare" description="--> generate javadoc">
    	<javadoc destdir="${target.javadoc}">
    		<fileset refid="source" />
        	<classpath>
        		<path refid="ExternalLibs" />
        	</classpath>
    	</javadoc>
    </target>

	
	
	
	<!-- ================================= 
          target: clean              
         ================================= -->
    <target name="clean" description="--> remove all generated files">
    	<delete dir="${target}"/>
    </target>

</project>
