<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>com.db4o</groupId>
		<artifactId>db4o</artifactId>
		<version>6.1-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>db4onqopt</artifactId>
	<packaging>jar</packaging>
	<name>db4onqopt: DB4O Native Query Optimizer</name>

	<dependencies>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>db4oj.tests</artifactId>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>db4ounit</artifactId>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>db4ounit.extensions</artifactId>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>db4ojdk1.2</artifactId>
		</dependency>

		<dependency>
			<groupId>ant</groupId>
			<artifactId>ant</artifactId>
			<version>(1.5,]</version>
		</dependency>

		<dependency>
			<groupId>EDU.purdue.cs</groupId>
			<artifactId>bloat</artifactId>
			<version>1.0</version>
		</dependency>

	</dependencies>

	<build>
	 	<sourceDirectory>src/main/java/core/src</sourceDirectory>

		<plugins>
			<!-- ======== use Java 1.5 =============================== -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
					<excludes>
						<!--SimpleMain has errors-->
						<exclude>SimpleMain.java</exclude>
					</excludes>
				</configuration>
			</plugin>

			<!-- ======== add src dirs =============================== -->
			<!--
			Hint: The test dir doesn't compile since one or two files has errors
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/main/java/test/src</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			-->

		</plugins>
	</build>


</project>